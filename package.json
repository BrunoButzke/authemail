{
  "name": "authemail-monorepo",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev:frontend": "next dev",
    "dev:api": "npm run dev --prefix api",
    "dev": "npx npm-run-all --parallel dev:frontend dev:api",
    "build:frontend": "next build",
    "build:api": "npm run build --prefix api",
    "build": "npm run build:frontend && npm run build:api",
    "start:frontend": "next start",
    "start:api": "npm run start --prefix api",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "14.2.3",
    "node-ipinfo": "^4.0.1",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
